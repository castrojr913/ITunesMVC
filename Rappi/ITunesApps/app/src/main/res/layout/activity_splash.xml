<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_background"
    style="@style/AppTheme.Splash.Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screen_margin"
    tools:context="com.jacr.gravityapp.controllers.splash.view.SplashActivity">

    <TextView
        android:id="@+id/splash_textview"
        style="@style/AppTheme.Splash.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/splash_description" />

</RelativeLayout>
