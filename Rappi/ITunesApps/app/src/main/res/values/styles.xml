<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_theme_primary</item>
        <item name="colorPrimaryDark">@color/app_theme_primary_dark</item>
        <item name="colorAccent">@color/app_theme_accent</item>
        <item name="android:textAppearance">@style/AppTheme.TextView</item>
    </style>

    <!-- Toolbar / Appbar -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/app_toolbar_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- This property fixes bug in regard to title size is smaller on landscape mode -->
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTitle</item>
        <!-- -->
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar.Transparent">
        <item name="android:background">@color/app_toolbar_background_transparent</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/app_textsize_h9</item>
    </style>

    <!-- Progress Bar -->

    <style name="AppTheme.ProgressBar">
        <item name="android:background">@color/app_progressbar_background</item>
        <item name="cpv_animAutostart">true</item>
        <item name="cpv_indeterminate">true</item>
    </style>

    <style name="AppTheme.ProgressBar.Circular">
        <item name="android:layout_width">@dimen/app_progressbar_circular_width</item>
        <item name="android:layout_height">@dimen/app_progressbar_circular_height</item>
    </style>

    <!-- TextView -->

    <style name="AppTheme.TextView">
        <item name="android:textColor">@color/app_textview_text</item>
        <item name="android:textColorHint">@color/app_textview_hint</item>
    </style>

    <!-- Splash -->

    <style name="AppTheme.Splash" />

    <style name="AppTheme.Splash.Background">
        <item name="android:background">@color/app_splash_background</item>
    </style>

    <style name="AppTheme.Splash.Text">
        <item name="android:textColor">@color/app_splash_text</item>
        <item name="android:textSize">@dimen/app_textsize_h5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/app_splash_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Catalog -->

    <style name="AppTheme.Catalog" />

    <style name="AppTheme.Catalog.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Catalog.Text.NoItems">
        <item name="android:textSize">@dimen/app_textsize_h7</item>
    </style>

    <style name="AppTheme.Catalog.Text.Title">
        <item name="android:textSize">@dimen/app_textsize_h9</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.Catalog.Text.SubTitle">
        <item name="android:textSize">@dimen/app_textsize_h10</item>
        <item name="android:textColor">@color/app_catalog_item_text_author</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Catalog.Image">
        <item name="android:layout_width">@dimen/app_catalog_item_image_width</item>
        <item name="android:layout_height">@dimen/app_catalog_item_image_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Catalog Details -->

    <style name="AppTheme.Catalog.Details" />

    <style name="AppTheme.Catalog.Details.Text">
        <item name="android:textSize">@dimen/app_textsize_h10</item>
        <item name="android:textColor">@color/app_catalog_item_details_text</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="AppTheme.Catalog.Details.Text.Title">
        <item name="android:textSize">@dimen/app_textsize_h9</item>
        <item name="android:textColor">@color/app_catalog_item_details_text_title</item>
    </style>

    <style name="AppTheme.Catalog.Details.Text.Rights">
        <item name="android:textSize">@dimen/app_textsize_h9</item>
        <item name="android:textColor">@color/app_catalog_item_details_text_rights</item>
    </style>

    <style name="AppTheme.Catalog.Details.Header">
        <item name="android:background">@color/app_catalog_item_details_header_background</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.Catalog.Details.HeaderImage">
        <item name="android:layout_width">@dimen/app_catalog_item_details_image_width</item>
        <item name="android:layout_height">@dimen/app_catalog_item_details_image_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.Catalog.Details.HeaderTitle">
        <item name="android:textSize">@dimen/app_textsize_h8</item>
        <item name="android:textColor">@color/app_catalog_item_details_header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Catalog.Details.HeaderSubTitle" parent="AppTheme.Catalog.Details.HeaderTitle">
        <item name="android:textSize">@dimen/app_textsize_h9</item>
    </style>

</resources>